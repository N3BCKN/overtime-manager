<div class="mt-3">
	<h2><%= @post.rationale %></h2>
</div>
<hr>
<div class="card card-body bg-light">
	<div>
		<h3><span>Overtime Amount Requested</span><%= @post.overtime_request %></h3>
	</div>
	<div>
		<h3><span>Employee: </span><%= @post.user.full_name %></h3>
	</div>
	<div>
		<h3><span>Date: </span><%= @post.date %></h3>
	</div>
	<div>
		<h3><span>Current status: </span><%= @post.status %></h3>
	</div>
</div>

<%= link_to "Edit", edit_post_path(@post), :class=> "btn btn-info mt-3" if policy(@post).update? %>

